<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mediacontroller_root_view"
    android:background="@color/mediacontroller_bg"
    android:orientation="vertical">

    <Button
        android:id="@+id/mediacontroller_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="返回" />

    <TextView
        android:id="@+id/mediacontroller_file_name"
        style="@style/MediaController_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mediacontroller_back_btn"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/mediacontroller_back_btn"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="这是标题这是标题" />

    <Button
        android:id="@+id/mediacontroller_quality_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mediacontroller_share_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/mediacontroller_share_btn"
        android:text="高清" />

    <Button
        android:id="@+id/mediacontroller_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="分享" />


    <ImageButton
        android:id="@+id/mediacontroller_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/video_player_seek_bar_btn"
        android:src="@drawable/mediacontroller_pause" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mediacontroller_time_current"
            style="@style/MediaController_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12:00" />

        <SeekBar
            android:id="@+id/mediacontroller_seekbar"
            style="@style/MediaController_VideoSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:focusable="true"
            android:max="1000" />

        <TextView
            android:id="@+id/mediacontroller_time_total"
            style="@style/MediaController_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="12:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mediacontroller_volume_plus" />

        <io.vov.vitamio.widget.VerticalSeekBar
            android:id="@+id/mediacontroller_volume_seekbar"
            style="@style/MediaController_VideoSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mediacontroller_time_total"
            android:layout_toRightOf="@id/mediacontroller_time_current"
            android:focusable="true"
            android:max="1000" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/mediacontroller_volume_minus" />
    </LinearLayout>

</RelativeLayout>